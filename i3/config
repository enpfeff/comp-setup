# Custom bindings
bindsym $mod+shift+x exec i3lock --color "$bg-color"
bindsym $mod+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 800 -opacity "85" -bw 0 -color-window "$bg-color" "$bg-color" "$bg-color" -font "System San Francisco Display 18"


